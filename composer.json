{
    "name": "renq/kata-mikado-method",
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/flex": "^2.1",
        "symfony/framework-bundle": "^6.0",
        "symfony/property-access": "^6.0",
        "symfony/runtime": "^6.0",
        "symfony/serializer": "^6.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/stopwatch": "^6.0",
        "symfony/web-profiler-bundle": "^6.0"
    },
    "authors": [
        {
            "name": "Micha≈Ç Lipek",
            "email": "michal.lipek@emag.pl"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "bin",
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
